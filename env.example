# Environment Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# S3 Configuration
S3_BUCKET_NAME=event-ai-storage

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/eventai_db

# SageMaker Configuration
SAGEMAKER_ENDPOINT_NAME=event-ai-model-endpoint
USE_SAGEMAKER=true

# Alternative AI Model API (if not using SageMaker)
AI_MODEL_API_URL=https://your-ai-model-api.com/predict
AI_MODEL_API_KEY=your_ai_model_api_key

# Notification Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/whatsapp-alert
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your_whatsapp_api_key
NOTIFICATION_RECIPIENTS=+1234567890,+0987654321

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Request Timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

