# Environment Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Server Configuration for EC2
API_BASE_URL=http://<EC2 IP>:3000
ALLOWED_ORIGINS=http://<EC2 IP>:3000,http://localhost:3000

# AWS Configuration
AWS_REGION=ap-southeast-5
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key


BEDROCK_INFERENCE_PROFILE_ARN=Your_IPA

# S3 Configuration
S3_BUCKET_NAME=event-ai-storage

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# SageMaker Configuration
SAGEMAKER_ENDPOINT_NAME=event-ai-model-endpoint
USE_SAGEMAKER=true

# Forecast Model Configuration (New AI Model)
FORECAST_MODEL_ENDPOINT=http://56.68.21.46/forecast_inout

# Alternative AI Model API (Legacy, if not using SageMaker)
AI_MODEL_API_URL=https://your-ai-model-api.com/predict
AI_MODEL_API_KEY=your_ai_model_api_key

# Notification Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/whatsapp-alert
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your_whatsapp_api_key
NOTIFICATION_RECIPIENTS=+1234567890,+0987654321

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Request Timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Google Serp API Configuration (for nearby events search)
SERP_API_KEY=your_serp_api_key_here
SERP_API_ENDPOINT=https://serpapi.com/search
# Enable/disable nearby events search (set to false to conserve API quota - 250 requests/month limit)
SERP_API_ENABLED=true

# Prediction Model Configuration
PREDICTION_MODEL_ENDPOINT=http://56.68.30.73/predict
PREDICTION_TIMEOUT=30000

# S3 Prediction Images Configuration (400+ crowd images for AI analysis)
S3_PREDICTION_IMAGE_BUCKET=predict-model-images
S3_PREDICTION_IMAGE_PREFIX=people_congested_image/test/images/
S3_PREDICTION_IMAGE_REGION=ap-southeast-5

# Cron Job Configuration
ENABLE_PREDICTION_CRON=true
# Run at standard 5-minute intervals: :00, :05, :10, :15, :20, :25, :30, :35, :40, :45, :50, :55
PREDICTION_CRON_PATTERN=0,5,10,15,20,25,30,35,40,45,50,55 * * * *
# Maximum timeframes to keep per gate (288 = 24 hours at 5-min intervals)
MAX_PREDICT_TIMEFRAMES=288
TZ=UTC

# Ongoing Event Notifications Configuration
ENABLE_ONGOING_EVENT_NOTIFICATIONS=true
# Run every 10 minutes: :00, :10, :20, :30, :40, :50
ONGOING_EVENT_NOTIFICATION_PATTERN=0,10,20,30,40,50 * * * *

